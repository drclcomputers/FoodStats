{
  "name": "foodstats-desktop",
  "version": "4.0.0",
  "description": "Desktop application for tracking nutritional information",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "@drclcomputers",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.drclcomputers.foodstats",
    "productName": "FoodStats",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "backend/${os}/${arch}/FoodStats${platform==='win32'?'.exe':''}",
        "to": "backend/FoodStats${platform==='win32'?'.exe':''}"
      },
      {
        "from": "frontend",
        "to": "frontend"
      },
      {
        "from": "backend/database/nutrition_data.db",
        "to": "backend/database/nutrition_data.db"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "asar": true
  }
}
